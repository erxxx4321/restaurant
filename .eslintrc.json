{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"ignorePatterns": ["/dist/**/*.js"],
	"rules": {
		"quotes": ["error", "double"],
		"indent": ["error", "tab", { "SwitchCase": 1,  "ObjectExpression": "first" }],
		"no-restricted-imports": ["error", "fs"],
		"no-undef": "off"
	}
}
